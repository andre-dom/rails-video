<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between">
  <h1>Clips</h1>
  <%= link_to "Upload", new_clip_path, class: "btn btn-primary my-auto" %>
</div>

<% if !@clips.empty? %>
  <div class="d-flex justify-content-center flex-wrap" >
    <% @clips.reverse_each do |clip| %>
      <div class="card m-3" style="width: 18rem;">
        <div class="card-body d-flex flex-column justify-content-around">
          <h3 class="card-title"><%= clip.title %></h3>
          <%= image_tag clip.video.thumb.url, size: "254x254", class: "img-fluid rounded" if clip.video%>
            <%= link_to 'View', clip, class: "btn btn-outline-primary mt-2" %>
            <%= link_to 'Delete', clip, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mt-2" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-2">
    <%= will_paginate @clips, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
<% else %>
  <h3>You don't have any clips</h3>
<% end %>
